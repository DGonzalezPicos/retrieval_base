@article{romanoEvolutionCNOIsotopes2017,
  title = {The Evolution of {{CNO}} Isotopes: A New Window on Cosmic Star Formation History and the Stellar {{IMF}} in the Age of {{ALMA}}},
  shorttitle = {The Evolution of {{CNO}} Isotopes},
  author = {Romano, D. and Matteucci, F. and Zhang, Z.-Y. and Papadopoulos, P. P. and Ivison, R. J.},
