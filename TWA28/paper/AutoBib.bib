@article{gharib-nezhadEXOPLINESMolecularAbsorption2021,
  title = {{{EXOPLINES}}: {{Molecular Absorption Cross-section Database}} for {{Brown Dwarf}} and {{Giant Exoplanet Atmospheres}}},
  shorttitle = {{{EXOPLINES}}},
  author = {{Gharib-Nezhad}, Ehsan and Iyer, Aishwarya R. and Line, Michael R. and Freedman, Richard S. and Marley, Mark S. and Batalha, Natasha E.},
  year = {2021},
