@article{gandhiESOSupJupSurvey2015,
  title = {{{ESO SupJup Survey XXX}}: {{Exploring Atmospheric Variability}} and {{Orbit}} of the {{Super-Jupiter AB Pictoris}} b with {{CRIRES}}+},
  author = {Gandhi, Siddharth and {de Regt}, Sam and Snellen, Ignas and Abdoulwahab, Idriss and {Palma-Bifani}, Paulina and Chauvin, Ga{\"e}l and Picos, Dar{\'i}o Gonz{\'a}lez and Zhang, Yapeng and Chomez, Antoine and Lagrange, Anne-Marie and Zurlo, Alice},
  year = {2015},
  abstract = {A growing number of directly-imaged companions have been recently characterised, with robust constraints carbon-to-oxygen ratios and even carbon and oxygen isotopic ratios. Many companions and isolated targets have also shown spectral variability. In this work we observed the super-Jupiter AB Pictoris b across four consecutive nights using VLT/CRIRES+ as part of the ESO SupJup survey, exploring how the constraints on the chemical composition and temperature profile change over time. We performed atmospheric retrievals of the high-resolution observations and found good consistency across all four nights, indicating that the atmosphere is relatively stable across the timescale of {$\sim$}days. We clearly detect H2O, 12CO and 13CO in each night owing to their strong absorption features in the K-band of the observations. We did find some small differences in the deep atmosphere temperature profile as well as the 12C/13C ratios across each night, but these were within 1-2{$\sigma$}. Our combined retrieval simultaneously analysing all four nights together found the C/O to be 0.59 {\textpm} 0.01, consistent with solar composition, and 12C/13C = 102 {\textpm} 8, slightly higher than the ISM and Solar System values. We also find a low projected rotational velocity, suggesting that the spin axis is observed pole-on and that there is an {$\sim$} 90{\textopenbullet} misalignment with its orbit inclination. This hints that AB Pictoris b might be rolling along its orbit like Uranus. Future ground and space observations will be able to explore variability and orbit of AB Pictoris b and other companions further.},
  langid = {english},
  file = {/home/dario/Downloads/zotero/Gandhi et al. - 2015 - ESO SupJup Survey XXX Exploring Atmospheric Varia.pdf}
}

