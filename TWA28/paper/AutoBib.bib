  file = {/home/dario/Zotero/storage/BG6U6QW2/Lambrechts and Johansen - 2012 - Rapid growth of gas-giant cores by pebble accretio.pdf}
}

@article{landmanDetectionOHUltrahot2021,
  title = {Detection of {{OH}} in the Ultra-Hot {{Jupiter WASP-76b}}},
  author = {Landman, Rico and {S{\`a}nchez-L{\'o}pez}, Alejandro and Molli{\`e}re, Paul and Kesseli, Aurora and Louca, Amy and Snellen, Ignas},
