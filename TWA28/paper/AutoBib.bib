@article{cridlandConnectingPlanetFormation2019,
  title = {Connecting Planet Formation and Astrochemistry. {{Refractory}} Carbon Depletion Leading to Super-Stellar {{C}}/{{O}} in Giant Planetary Atmospheres},
  author = {Cridland, Alexander J. and Eistrup, Christian and {van Dishoeck}, Ewine F.},
  year = {2019},
  month = jul,
  journal = {Astronomy and Astrophysics},
  volume = {627},
  pages = {A127},
