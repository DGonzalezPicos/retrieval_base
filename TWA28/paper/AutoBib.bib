@misc{grattonStellarCompanionsJupiterlike2024,
  title = {Stellar Companions and {{Jupiter-like}} Planets in Young Associations},
  author = {Gratton, R. and Bonavita, M. and Mesa, D. and Desidera, S. and Zurlo, A. and Marino, S. and D'Orazi, V. and Rigliaco, E. and Nascimbeni, V. and Barbato, D. and Columba, G. and Squicciarini, V.},
  year = {2024},
