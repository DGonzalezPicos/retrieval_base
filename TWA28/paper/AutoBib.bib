@misc{sarkarExoplanetTransitSpectroscopy2024,
  title = {Exoplanet {{Transit Spectroscopy}} with {{JWST NIRSpec}}: {{Diagnostics}} and {{Homogeneous Case Study}} of {{WASP-39}} b},
