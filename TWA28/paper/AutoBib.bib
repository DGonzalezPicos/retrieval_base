@article{hejaziElementalAbundancesSuperNeptune2023,
  title = {Elemental {{Abundances}} of the {{Super-Neptune WASP-107b}}'s {{Host Star Using High-resolution}}, {{Near-infrared Spectroscopy}}},
  author = {Hejazi, Neda and Crossfield, Ian J. M. and Nordlander, Thomas and Mansfield, Megan and Souto, Diogo and Marfil, Emilio and Coria, David R. and Brande, Jonathan and Polanski, Alex S. and Hand, Joseph E. and Wienke, Kate F.},
